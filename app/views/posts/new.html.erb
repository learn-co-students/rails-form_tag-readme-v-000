<html>
<head>
  <title>new post</title>
</head>
<body>
  <h3>Post Form</h3>

  <%= form_tag posts_path do %>
    <label>Post title:</label>
    <br>
    <%= text_field_tag :title %>
    <br>
    <label>Description:</label>
    <br>
    <%= text_area_tag :description %>
    <br>
    <%= submit_tag "Submit Post" %>
  <% end %>

  <%= params.inspect %>

</body>
</html>