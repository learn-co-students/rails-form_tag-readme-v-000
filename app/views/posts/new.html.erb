<h3>Post Form</h3>
<%= form_tag posts_path do %>
  <div>Post title:</div>
  <%=text_field_tag :'post[title]' %><br>

  <div>Post description:</div>
  <%=text_area_tag :'post[description]' %><br>

  <%= hidden_field_tag :authenticity_token,form_authenticity_token %>
  <%=submit_tag "Submit Post" %>
<%end%>
