<h3>Post Form</h3>

<%= form_tag posts_path do%>
  <label for="post_title">Post title:</label>
  <%=text_area_tag :'post[title]'%><br>

  <label for="post_description">Post description:</label>
  <%= text_area_tag :'post[description]' %><br>

  <%= submit_tag "Submit Post" %>
<%end%>

<%= params.inspect %>
